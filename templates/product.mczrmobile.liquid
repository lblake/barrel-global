{% include 'mczr' %}
<div id="mczrLoader" style="width:100%;height:100%;position:relative;top:0;left:0;z-index: 100;">
</div>
<style>
  html {
    padding: 0;
    margin: 0;
    overflow: hidden;
    position: relative;
    width: 100%;
    height: 100%;
  }
  body {
    position: relative;
    top: 0;
    padding: 0;
    line-height: 0;
    overflow: hidden;
    max-height: 100%;
    height: 100% !important;
  }
  div#page {
    max-height: 100%;
    z-index: 100 !important;
  }
  body:not(.template-index) main.main-content {
    max-height: 100%;
    margin: 0;
  }
  #PageContainer {
    position: absolute;
    top: 0;
    left: 0;
    background: white;
    min-height: 100%;
    max-height: 100%;
    width: 100%;
    z-index: 100;
    overflow: hidden;
  }
  #MainContent{
    padding-top: 0;
  }
  #mczrLoader{
    text-align:center;
    /* height:90vh !important; */
  }
  #mczrProductIframe{
    min-height: 100%;
    max-height: 100%;
  }
  div#shopify-section-footer{
    display: none;
  }
  nav.header__inline-menu {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    z-index: 1000 !important;
  }
/* 
  .header {
    position: relative;
    z-index: 1000;
  } */
</style>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
$(document).ready(function(){
  $(".onclick-menu").click(function(e){
    e.preventDefault();
    e.stopPropagation();
    
    $(".header__inline-menu").toggleClass("active--scroll-menu");
    
    // Handle z-index hierarchy
    if($(".header__inline-menu").hasClass("active--scroll-menu")) {
      $("#mczrLoader").css('z-index', '99');
      $("#PageContainer").css('z-index', '99');
      $("#page").css('z-index', '99');
    } else {
      $("#mczrLoader").css('z-index', '100');
      $("#PageContainer").css('z-index', '100');
      $("#page").css('z-index', '100');
    }
  });
});
</script>